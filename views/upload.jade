doctype html
head
  include ./head.jade
section#contact.page-section
  br
  br
  .container
    // Contact Section Heading
    h2.page-section-heading.text-center.text-uppercase.text-secondary.mb-0= pageHeader.title
    // Icon Divider
    .divider-custom
      .divider-custom-line
      .divider-custom-icon
        i.fas.fa-star
      .divider-custom-line
    // Contact Section Form
    .row
      .col-lg-8.mx-auto
        br
        form(action='' method='post' name='submit')
          .control-group
            .form-group.floating-label-form-group.controls.mb-0.pb-2
              h3.text-uppercase.mb-4 Person 1
              label name
              input.form-control(name='name' type='text' placeholder='Name' required='required' data-validation-required-message='Please enter your name.')
              p.help-block.text-danger
           .control-group
            .form-group.floating-label-form-group.controls.mb-0.pb-2
              label id
              input.form-control(name='id' type='text' placeholder='Student Id' required='required' data-validation-required-message='Please enter your studnet id.')
              p.help-block.text-danger
          br
          br
          .control-group
            .form-group.floating-label-form-group.controls.mb-0.pb-2
              h3.text-uppercase.mb-4 Person 2
              label name
              input.form-control(name='name' type='text' placeholder='Name')
          .control-group
            .form-group.floating-label-form-group.controls.mb-0.pb-2
              label id
              input.form-control(name='id' type='text' placeholder='Student Id')
          br
          br
          .control-group
            .form-group.floating-label-form-group.controls.mb-0.pb-2
              h3.text-uppercase.mb-4 game-info
              label game_name
              input.form-control(name='game_name' type='text' placeholder='Game Name' required='required' data-validation-required-message='Please enter your game name.')
              p.help-block.text-danger
          .control-group
            .form-group.floating-label-form-group.controls.mb-0.pb-2
              label passwd
              input.form-control(name='passwd' type='password' placeholder='password' required='required' data-validation-required-message='Please enter your password.')
              p.help-block.text-danger
          .control-group
            .form-group.floating-label-form-group.controls.mb-0.pb-2
              label content
              textarea.form-control(name='content' rows='5' placeholder='Explain your game simply' required='required' data-validation-required-message='Please enter a message.')
              p.help-block.text-danger
          br
          #success
          .form-group
            button.btn.btn-primary.btn-xl(type='submit') submit
#footer
  include ./footer.jade

